<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:minHeight="40dp"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ps_icon"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.PocketStream.Headline2"
                android:textColor="@color/text_primary" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Section 1: Tethering Control (Combined with Network Discovery) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tetheringCard"
                style="@style/Widget.PocketStream.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- 50% guideline for description and progress bar -->
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/tetheringGuideline50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/tetheringTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tethering_title"
                        android:textAppearance="@style/TextAppearance.PocketStream.Headline2"
                        app:layout_constraintEnd_toStartOf="@id/refreshButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Small icon-only Refresh button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/refreshButton"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/refresh_app"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/success"
                        app:iconSize="24dp"
                        app:strokeWidth="0dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/scanButton"
                        app:layout_constraintEnd_toStartOf="@id/scanButton"
                        app:layout_constraintTop_toTopOf="@id/scanButton" />

                    <!-- Main Connect button (disabled by default until tethering detected) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/scanButton"
                        style="@style/Widget.PocketStream.Button"
                        android:layout_width="112dp"
                        android:layout_height="63dp"
                        android:enabled="false"
                        android:text="@string/connect_button"
                        android:textSize="11sp"
                        app:icon="@drawable/ic_link"
                        app:iconSize="17dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tetheringDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/tethering_description"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body2"
                        app:layout_constraintEnd_toStartOf="@id/tetheringGuideline50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tetheringTitle" />

                    <!-- Tethering status row -->
                    <TextView
                        android:id="@+id/tetheringStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:text="@string/tethering_disconnected"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@id/tetheringStatusIcon"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tetheringDescription" />

                    <ImageView
                        android:id="@+id/tetheringStatusIcon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/tetheringStatus"
                        app:layout_constraintStart_toEndOf="@id/tetheringStatus"
                        app:layout_constraintTop_toTopOf="@id/tetheringStatus"
                        tools:visibility="visible" />

                    <!-- Connection progress bar (50% width) -->
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/scanProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        app:indicatorColor="@color/primary"
                        app:trackColor="@color/surface_variant"
                        app:trackCornerRadius="4dp"
                        app:layout_constraintEnd_toStartOf="@id/tetheringGuideline50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tetheringStatus"
                        tools:visibility="visible"
                        tools:progress="50" />

                    <!-- Connection result text -->
                    <TextView
                        android:id="@+id/scanResultText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/connect_idle"
                        android:textAppearance="@style/TextAppearance.PocketStream.Caption"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scanProgressBar" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section 2: Device Login -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/browserCard"
                style="@style/Widget.PocketStream.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- 50% guideline for description text -->
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/browserGuideline50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/browserTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/browser_title"
                        android:textAppearance="@style/TextAppearance.PocketStream.Headline2"
                        app:layout_constraintEnd_toStartOf="@id/browserButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/browserButton"
                        style="@style/Widget.PocketStream.Button"
                        android:layout_width="112dp"
                        android:layout_height="63dp"
                        android:text="@string/start_browser"
                        android:textSize="11sp"
                        app:icon="@drawable/ic_globe"
                        app:iconSize="17dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/browserDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/browser_description"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body2"
                        app:layout_constraintEnd_toStartOf="@id/browserGuideline50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/browserTitle" />

                    <TextView
                        android:id="@+id/targetIpLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:text="@string/target_ip_label"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/browserDescription" />

                    <TextView
                        android:id="@+id/targetIp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/no_target_ip"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                        android:textColor="@color/accent"
                        android:textIsSelectable="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/targetIpLabel"
                        app:layout_constraintBaseline_toBaselineOf="@id/targetIpLabel"
                        tools:text="192.168.42.129" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section 4: Video Stream -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/videoStreamCard"
                style="@style/Widget.PocketStream.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- 50% guideline for description text -->
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/videoStreamGuideline50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/videoStreamTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/video_stream_title"
                        android:textAppearance="@style/TextAppearance.PocketStream.Headline2"
                        app:layout_constraintEnd_toStartOf="@id/videoStreamStatusIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/videoStreamStatusIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/stream_status"
                        android:src="@drawable/ic_check_circle"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/launchStreamButton"
                        app:layout_constraintEnd_toStartOf="@id/launchStreamButton"
                        app:layout_constraintTop_toTopOf="@id/launchStreamButton"
                        app:tint="@color/success"
                        tools:visibility="visible" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/launchStreamButton"
                        style="@style/Widget.PocketStream.Button"
                        android:layout_width="112dp"
                        android:layout_height="63dp"
                        android:text="@string/launch_stream"
                        android:textSize="11sp"
                        app:icon="@drawable/ic_broadcast"
                        app:iconSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/videoStreamDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/video_stream_description"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body2"
                        app:layout_constraintEnd_toStartOf="@id/videoStreamGuideline50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/videoStreamTitle" />

                    <!-- Phone IP Label -->
                    <TextView
                        android:id="@+id/phoneIpLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:text="Phone IP:"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/videoStreamDescription" />

                    <!-- Stream URL Display (IP:port from settings) -->
                    <LinearLayout
                        android:id="@+id/streamUrlContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/phoneIpLabel"
                        app:layout_constraintTop_toTopOf="@id/phoneIpLabel"
                        app:layout_constraintBottom_toBottomOf="@id/phoneIpLabel">

                        <TextView
                            android:id="@+id/videoStreamUrl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stream_ip_not_detected"
                            android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                            android:textColor="@color/accent"
                            android:textIsSelectable="true"
                            tools:text="10.111.10.19:8600" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section 5: RTSP Server -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rtspServerCard"
                style="@style/Widget.PocketStream.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- 50% guideline for description text -->
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/rtspGuideline50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/rtspServerTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/rtsp_server_title"
                        android:textAppearance="@style/TextAppearance.PocketStream.Headline2"
                        app:layout_constraintEnd_toStartOf="@id/launchRtspButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/launchRtspButton"
                        style="@style/Widget.PocketStream.Button"
                        android:layout_width="112dp"
                        android:layout_height="63dp"
                        android:text="@string/launch_rtsp"
                        android:textSize="11sp"
                        app:icon="@drawable/ic_broadcast"
                        app:iconSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/rtspServerDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/rtsp_server_description"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body2"
                        app:layout_constraintEnd_toStartOf="@id/rtspGuideline50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rtspServerTitle" />

                    <!-- Stream URL Label -->
                    <TextView
                        android:id="@+id/rtspUrlLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="@string/rtsp_url_label"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rtspServerDescription" />

                    <!-- Stream URL Value with Copy Button -->
                    <LinearLayout
                        android:id="@+id/rtspUrlContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/rtspUrlLabel"
                        app:layout_constraintTop_toTopOf="@id/rtspUrlLabel"
                        app:layout_constraintBottom_toBottomOf="@id/rtspUrlLabel">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/copyRtspUrlButton"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="Copy RTSP URL"
                            app:icon="@android:drawable/ic_menu_share"
                            app:iconTint="@color/accent"
                            app:iconGravity="textStart"
                            app:strokeWidth="0dp"
                            app:iconPadding="0dp"
                            app:iconSize="16dp" />

                        <TextView
                            android:id="@+id/rtspUrlValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rtsp_url_not_available"
                            android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                            android:textColor="@color/accent"
                            tools:text="rtsp://192.168.1.1:8554/stream" />
                    </LinearLayout>

                    <!-- Credentials Label -->
                    <TextView
                        android:id="@+id/rtspCredentialsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/rtsp_credentials_label"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rtspUrlLabel" />

                    <!-- Credentials Value -->
                    <TextView
                        android:id="@+id/rtspCredentialsValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/rtsp_auth_not_configured"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                        android:textColor="@color/accent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/rtspCredentialsLabel"
                        app:layout_constraintBaseline_toBaselineOf="@id/rtspCredentialsLabel"
                        tools:text="Configured" />

                    <!-- Uptime Label -->
                    <TextView
                        android:id="@+id/rtspUptimeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/rtsp_uptime_label"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rtspCredentialsLabel" />

                    <!-- Uptime Value -->
                    <TextView
                        android:id="@+id/rtspUptimeValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/rtsp_uptime_default"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                        android:textColor="@color/accent"
                        android:fontFamily="monospace"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/rtspUptimeLabel"
                        app:layout_constraintBaseline_toBaselineOf="@id/rtspUptimeLabel"
                        tools:text="00:05:32" />

                    <!-- Bandwidth Label -->
                    <TextView
                        android:id="@+id/rtspBandwidthLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/rtsp_bandwidth_label"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rtspUptimeLabel" />

                    <!-- Bandwidth Value -->
                    <TextView
                        android:id="@+id/rtspBandwidthValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/rtsp_bandwidth_default"
                        android:textAppearance="@style/TextAppearance.PocketStream.Body1"
                        android:textColor="@color/accent"
                        android:fontFamily="monospace"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/rtspBandwidthLabel"
                        app:layout_constraintBaseline_toBaselineOf="@id/rtspBandwidthLabel"
                        tools:text="1.25 MB/s" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Settings Navigation Drawer -->
    <include
        android:id="@+id/navDrawer"
        layout="@layout/nav_drawer_settings"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>
